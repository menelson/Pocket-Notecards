<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/deck1"
        android:textSize="18sp"
        tools:context=".CardSettings" />
    
    <TextView
        android:id="@+id/promptText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/textView1"
        android:text="@string/fileSelect"
        android:textSize="15sp"
         />
    
    <TextView 
        android:id="@+id/fontSize1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/promptText"
        android:text="@string/selectFont"
        android:textSize="15sp"/>

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/promptText"
        android:layout_toRightOf="@+id/promptText"
        android:layout_marginLeft="70dp"
         />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinner1"
        android:layout_alignBottom="@+id/fontSize1" />
    
    <TextView
        android:id="@+id/textDeck2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fontSize1"        
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="@string/deck2"
        android:textSize="18sp" />
    
    <TextView
        android:id="@+id/promptText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/textDeck2"
        android:text="@string/fileSelect"
        android:textSize="15sp"
         />
    
    <TextView 
        android:id="@+id/fontSize2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/promptText2"
        android:text="@string/selectFont"
        android:textSize="15sp"/>
    
    <Spinner
        android:id="@+id/spinDeck2"
