    <Spinner
        android:id="@+id/spinFont2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinDeck2"
        android:layout_alignBottom="@+id/fontSize2" />
    
    <TextView
